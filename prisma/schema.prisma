generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(uuid())
  code            String   @unique @default(cuid()) // Tronqué à 5 caractères côté app
  nomComplet      String
  email           String   @unique
  motDePasse      String
  role            String   @default("UTILISATEUR") //   
  statut          String   @default("actif")  
  createdAt       DateTime @default(now())
  deletedAt       DateTime? // null = non supprimé
}

model Jury {
  code           String   @id
  nom            String
  prenom         String
  date_Naissance DateTime
  telephone      String
  nationalite    String
}

model Realisateur {
  code          String   @id
  nom           String
  prenom        String
  dateNaissance DateTime
  films         Film[]   @relation("RealisateurFilms")
  createdAt     DateTime @default(now())
}

model Producteur {
  code          String   @id
  nom           String
  prenom        String
  dateNaissance DateTime
  films         Film[]   @relation("ProducteurFilms")
  createdAt     DateTime @default(now())
}

model Film {
  codeFilm       String       @id
  titre          String
  dateFilm       DateTime
  sujet          String
  image          String?      // URL ou chemin vers l'image
  realisateurCode String
  producteurCode  String
  realisateur    Realisateur  @relation("RealisateurFilms", fields: [realisateurCode], references: [code])
  producteur     Producteur   @relation("ProducteurFilms", fields: [producteurCode], references: [code])
  createdAt      DateTime     @default(now())
}
