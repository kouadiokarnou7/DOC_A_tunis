generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(uuid())
  code            String   @unique @default(cuid()) // Tronqué à 5 caractères côté app
  nomComplet      String
  email           String   @unique
  motDePasse      String
  role            String   @default("UTILISATEUR") //   
  statut          String   @default("actif")  
  createdAt       DateTime @default(now())
  deletedAt       DateTime? // null = non supprimé
}
